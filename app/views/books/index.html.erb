<h1>Listing books</h1>

<table class="table table-condensed table-striped">
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Isbn</th>
    <th>Count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.price %></td>
    <td><%= book.isbn %></td>
    <td><%= book.rentals.count %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= paginate @books %>
<%= link_to 'New Book', new_book_path, :class => "btn" %>
